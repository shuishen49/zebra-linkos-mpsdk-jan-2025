<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDevDemo.DemoSelectionPage"
             Shell.BackgroundColor="LightSteelBlue"
             Title="Select a Demo">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="5">
                <Button Text="Connectivity Demo" Clicked="ConnectivityDemoButton_Clicked" />
                <Button Text="Discovery Demo" Clicked="DiscoveryDemoButton_Clicked" />
                <Button Text="Multichannel Demo" Clicked="MultichannelDemoButton_Clicked" />
                <Button Text="Printer Status Demo" Clicked="PrinterStatusDemoButton_Clicked" />
                <Button Text="Profile Demo" Clicked="ProfileDemoButton_Clicked" />
                <Button Text="Send File Demo" Clicked="SendFileDemoButton_Clicked" />
                <Button Text="Settings Demo" Clicked="SettingsDemoButton_Clicked" />
                <Button Text="Signature Capture Demo" Clicked="SignatureCaptureDemoButton_Clicked" />
                <Button Text="Status Channel Demo" Clicked="StatusChannelDemoButton_Clicked" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>